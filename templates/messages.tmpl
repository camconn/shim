{{- define "messages" -}}
    {{/* Simple subtemplate to handle messages */}}
	{{- if eq .Action "warn" -}}
		<p class="notification is-warning">{{- .Message | html -}}</p>
	{{- else if .Failed -}}
		<div class="notification is-danger">
			<p>{{- .Message | html -}}</p>
		</div>
	{{- else if .Success -}}
		<div class="notification is-success">
			<p>{{- .Message | html -}}</p>
		</div>
	{{- end -}}
{{- end -}}
