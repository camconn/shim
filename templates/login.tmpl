{{define "loginPage"}}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>SHIM | Login</title>
    </head>
    <body>
        <h1>Authentication required</h1>
        <p>Please login using the form below.</p>
        {{- if .Failed -}}
        <p>Invalid Username/Password. Please try again.</p>
        {{- end -}}
        <form action="/login/" method="post">
            <p>Username: <input type="text" name="username" class="creds"></p>
            <p>Password: <input type="password" name="password" class="creds"></p>
            <p><input type="submit" value="Login"></p>
        </form>
    </body>
</html>
{{end}}
